command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[memory]
command=~/.config/i3blocks/scripts/i3mem
interval=30
label=🧠

[cpu]
command=~/.config/i3blocks/scripts/i3cpu
interval=15
label=💻

[volume]
interval=~/.config/i3blocks/scripts/once
command=i3volume
signal=10

[diskspace]
interval=60
command=ps axch -o cmd:15,%cpu --sort=-%cpui3disk /

#[diskspace]
#interval=60
#command=i3disk /home 🏠

[battery]
command=~/.config/i3blocks/scripts/i3battery BAT1
interval=5

[battery]
command=~/.config/i3blocks/scripts/i3battery BAT0
interval=5

[time]
label=📅
command=~/.config/i3blocks/scripts/i3date
interval=10

[internet]
command=~/.config/i3blocks/scripts/i3internet
interval=10

[help]
command=~/.config/i3blocks/scripts/i3help
interval=once
